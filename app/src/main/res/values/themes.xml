<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConverterCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/radio_button_pressed</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RadioButtonStyle">
     <item name="android:textSize">@dimen/radio_button_text</item>
     <item name="android:textColor">@color/text_color</item>
     <item name="android:gravity">center</item>
     <item name="android:textStyle">bold</item>
     <item name="marginHorizontal">@dimen/small_margin</item>
     <item name="android:button">@null</item>
    </style>

    <style name="ButtonNumberStyle">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_marginStart">@dimen/button_margin_start</item>
        <item name="fontFamily">@font/inter</item>

    </style>
</resources>